@model BOOKSTORE00.ViewModels.BookUpdatePriceViewModel

@{
    ViewData["Title"] = "Precio";
}

<h1>Update menu price</h1>

<h4>BOOK</h4>
<hr />
<p>@Model.Name</p>
<div>
    <p>Actual Price: @Model.Price</p>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdatePrice" method="post">
            <div class="form-group">
                <label asp-for="Percent" class="control-label"></label>
                <input asp-for="Percent" class="form-control" />
                <span asp-validation-for="Percent" class="text-danger"></span>
            </div>

             <div class="form-group">
                <input type="submit" value="Update Price" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>