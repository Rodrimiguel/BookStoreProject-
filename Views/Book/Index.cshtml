@using BOOKSTORE00.ViewModels; 
@model BookViewModel // RECIBE OBJETO VIEW MODEL

@{
    ViewData["Title"] = "Index";
}

<h1>BOOKS</h1>

<p>
    <button type="button" class="btn btn-primary"><a class="Links" asp-action="Create" >CREATE BOOK</a></button>
</p>
<div class="row">
    <form method="get" asp-action="Index" asp-controller="Book">
        <div class="col-6 form-group">
            <input class="form-control" asp-for="NameFilter" />
        </div>
        <button class="btn btn-info" type="submit">SEARCH</button>
    </form>
</div>
<table class ="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Editorial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Condition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].withcdordvd)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Books)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(model => item.Autor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Editorial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Condition)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.withcdordvd)
                </td>
                <td>
                    <button type="button" class="btn btn-primary"><a asp-action="Edit" asp-route-id="@item.Id">Edit</a></button> 
                    <button type="button" class="btn btn-success"><a asp-action="Details" asp-route-id="@item.Id">Details</a></button>
                    <button type="button" class="btn btn-danger"><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></button>
                </td>
            </tr>
        }
    </tbody>
</table>

